@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css"/>
    <link rel="icon" type="image/png" href="~/Imagens/Logo.png"/>
</head>
<body class="body">
    <header class="cabeçalho">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">   
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <div class="imglogo">
                        <img src="~/Imagens/Mostre o seu estilo de desenho - logo.png" height="100">
                        </div>
                        @if(Context.Session.GetInt32("idUsuário")==null)
                        {
                        <li class="nav-item">
                            <div class="Formatalink">
                            <a class="nav-link"asp-area=" "asp-controller="Home" asp-action="Index">Página inicial</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="Formatalink">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Galeria">Galeria</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="Formatalink">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Portfólio">Portfólio</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="Formatalink">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Cadastro">Cadastro</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="Formatalink">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Início_Site">Como o site surgiu?</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="Formatalink">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </div>
                        </li>
                        }
                        else
                        {
                        <li class="nav-item">
                            <div class="Formatalink">
                        <a class="nav-link texto" asp-area="" asp-controller="Home" asp-action="Index">Página inicial</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="Formatalink">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Galeria">Galeria</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="Formatalink">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Portfólio">Portfólio</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="Formatalink">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Fale">Fale conosco</a>
                           </div>
                        </li>
                        <li class="nav-item">
                            <div class="Formatalink">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Início_Site">Como o site surgiu?</a>
                            </div>
                        </li>
                         <li class="nav-item">
                            <div class="Formatalink">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">Sair</a>
                            </div>
                        </li>
                        <p>Olá!</p>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="footer">
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Mostre o seu estilo de desenho 
        </div>
    </footer>
    </div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
