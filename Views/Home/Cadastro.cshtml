@model Cadastro
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="~/css/site.css" />
@{
    ViewData["Title"] = "Cadastro";
}
<div class="formulÃ¡riocadastro">
    <div class="row justify-content-md-center">
        <div class="jumbotron col-6">

            <div class="tituloCadastro">
                <h4>Cadastro</h4>

                <br>

                <form method="post" asp-action="Cadastro">

                    <p>
                        <label asp-for="Nome">Nome:</label>
                        <input asp-for="Nome" id="txtNome" onblur="ValidarNome()" required>
                    </p>

                    <p>
                        <label asp-for="Email">Email:</label>
                        <input asp-for="Email" type="email" name="Email" id="txtEmail" placeholder="Email" onblur="ValidarEmail()" required>
                    </p>



                    <p>
                        <label asp-for="Senha">Digite a senha:</label>
                        <input asp-for="Senha" type="password" id="txtSenha" onblur="ValidarSenha()" required>
                    </p>


                    <p>
                        <label asp-for="Senha2">Confirme a senha:</label>
                        <input asp-for="Senha2" type="password" id="TxtSenha2" onblur="ValidarSenha2()" required>
                    </p>


                    <p>
                        <label asp-for="Nascimento">Informe a sua data de nascimento:</label>
                        <input asp-for="Nascimento" type="date" id="data_nasc" required>
                    </p>


                    <p>
                        <input type="submit" class="btn btn-primary btn-lg" value="Enviar" />
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
 <script src="~/js/site.js" asp-append-version="true"></script>

