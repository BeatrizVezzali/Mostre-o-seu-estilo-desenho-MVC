@model Login
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="~/css/site.css" />
@{
    ViewData["Title"] = "Login";
}
<div class="formuláriologin">
    <div class="row justify-content-md-center">
        <div class="jumbotron col-8">

            <div class="tituloLogin">
            <h4>Se você já fez o cadastro, faça o seu login aqui:</h4>
            <br>
                <form method="post" asp-action="Login">
                    <p>
                        <label asp-for="Nome">Nome:</label>
                        <input asp-for="Nome" id="txtNome" onblur="ValidarNome()" required>
                    </p>

                    <p>
                        <label asp-for="Senha">Senha:</label>
                        <input asp-for="Senha" type="password" id="txtSenha" onblur="ValidarSenha()" required>
                    </p>

                    <p>
                        <input type="submit" class="btn btn-primary btn-lg" value="Entrar" />
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/js/site.js" asp-append-version="true"></script>
